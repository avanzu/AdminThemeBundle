{% extends '@AvanzuAdminTheme/layout/login-layout.html.twig' %}

{% block page_content %}
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">{{ 'Sign in to start your session'|trans({}, 'AvanzuAdminTheme') }}</p>
            <form action="../../index2.html" method="post">
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="{{ 'Email'|trans({}, 'AvanzuAdminTheme') }}"/>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="{{ 'Password'|trans({}, 'AvanzuAdminTheme') }}"/>
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> {{ 'Remember Me'|trans({}, 'AvanzuAdminTheme') }}
                            </label>
                        </div>
                    </div><!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">{{ 'Sign In'|trans({}, 'AvanzuAdminTheme') }}</button>
                    </div><!-- /.col -->
                </div>
            </form>

            <div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> {{ 'Sign in using Facebook'|trans({}, 'AvanzuAdminTheme') }}</a>
                <a href="#" class="btn btn-block btn-social btn-google-plus btn-flat"><i class="fa fa-google-plus"></i> {{ 'Sign in using Google+'|trans({}, 'AvanzuAdminTheme') }}</a>
            </div><!-- /.social-auth-links -->

            <a href="#">{{ 'I forgot my password'|trans({}, 'AvanzuAdminTheme') }}</a><br>
            <a href="register.html" class="text-center">{{ 'Register a new membership'|trans({}, 'AvanzuAdminTheme') }}</a>

        </div><!-- /.login-box-body -->
    </div>
{% endblock %}
